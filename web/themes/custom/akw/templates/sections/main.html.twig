<main class="main">

  {% include "@akw/sections/banner.html.twig" ignore missing %}

  {% if logged_in %}
  <div class="main-logged-in container">
    {% if page.primary_menu %}
      {{ page.primary_menu }}
    {% endif %}
    {% if page.secondary_menu %}
      {{ page.secondary_menu }}
    {% endif %}

    {% if page.breadcrumb %}
      {{ page.breadcrumb }}
    {% endif %}

    {% if page.featured %}
      {{ page.featured }}
    {% endif %}

    {% if page.help %}
      {{ page.help }}
    {% endif %}
  </div>
  {% endif %}

  {% if (is_node and node.getType() in ['services', 'article']) %}
    {% include "@akw/body/columns.html.twig" ignore missing %}
  {% elseif (is_node and node.getType() in ['system']) %}
    {% include "@akw/body/multiple.html.twig" ignore missing %}
  {% elseif is_node %}
    {% include "@akw/body/body.html.twig" ignore missing %}
  {% else %}
    {% include "@akw/body/simple.html.twig" ignore missing %}
  {% endif %}

</main>
