<a href="{{ url }}" class="teaser">
{% if node.field_background.entity.field_media_image.entity.fileuri is not empty %}
  <figure class="teaser__img">
    <img width="600" height="300" loading="lazy"
      src="{{ file_url(node.field_background.entity.field_media_image.entity.fileuri | image_style('600x300')) }}"
      alt="{{ node.field_background.entity.field_media_image.0.alt|raw }}" />
  </figure>
  {% endif %}
  <div class="teaser__data">
    <h3 class="teaser_title">{{ node.title.value }}</h3>
  </div>
  <div class="teaser__call">
    <span class="material-symbols-outlined"></span>
    <span>Más detalles</span>
  </div>
</a>
